
<h1>历史借阅记录</h1>

<table class="table">
  <thead>
    <tr>
      <th>图书编号</th>
      <th>书名</th>
      <th>借阅者学号</th>
      <th>借阅时间</th>
      <th>归还时间</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if user_signed_in? %>
    <% if current_user.student? %>
    <% @my_historyborrowtables.each do |historyborrowtable| %>
      <tr>
        <td><%= historyborrowtable.bookid %></td>
        <td><%= historyborrowtable.bookname %></td>
        <td><%= historyborrowtable.borrowerid %></td>
        <td><%= historyborrowtable.borrowdate %></td>
        <td><%= historyborrowtable.returndate %></td>
      </tr>
    <% end %>
  <% end %>

    <% if current_user.admin? %>
      <% @historyborrowtables.each do |historyborrowtable| %>
        <tr>
          <td><%= historyborrowtable.bookid %></td>
          <td><%= historyborrowtable.bookname %></td>
          <td><%= historyborrowtable.borrowerid %></td>
          <td><%= historyborrowtable.borrowdate %></td>
          <td><%= historyborrowtable.returndate %></td>

          <td><%= link_to '删除本条记录', historyborrowtable, method: :delete, data: { confirm: 'Are you sure?' },
                          class: "btn btn-danger" ,style: "color:black;font-size:10px;font-weight:bold" %></td>
        </tr>
      <% end %>
    <% end %>

    <% end %>
  </tbody>
</table>

<br>

