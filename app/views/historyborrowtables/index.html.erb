<p></p>
<h1>历史借阅记录</h1>

<table class="table">
  <thead>
    <tr>
      <th>图书编号</th>
      <th>书名</th>
      <th>借阅者学号</th>
      <th>借阅时间</th>
      <th>归还时间</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if user_signed_in? %>
    <% if current_user.student? %>
    <% @my_historyborrowtables.each do |historyborrowtable| %>
      <tr>
        <td><%= historyborrowtable.bookid %></td>
        <td><%= historyborrowtable.bookname %></td>
        <td><%= historyborrowtable.borrowerid %></td>
        <td><%= historyborrowtable.borrowdate %></td>
        <td><%= historyborrowtable.returndate %></td>
      </tr>
    <% end %>
  <% end %>

    <% if current_user.admin? || current_user.superadmin?%>
      <% @historyborrowtables.each do |historyborrowtable| %>
        <tr>
          <td><%= historyborrowtable.bookid %></td>
          <td><%= historyborrowtable.bookname %></td>
          <td><%= historyborrowtable.borrowerid %></td>
          <td><%= historyborrowtable.borrowdate %></td>
          <td><%= historyborrowtable.returndate %></td>

        </tr>
      <% end %>
    <% end %>

    <% end %>
  </tbody>
</table>

<br>

