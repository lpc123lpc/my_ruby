<p id="notice"><%= notice %></p>

<h1>管理员信息</h1>

<table class="table">
  <thead>
    <tr>
      <th>管理员ID</th>
      <th>姓名</th>
      <th>性别</th>
      <th>联系电话</th>
      <th>电子邮箱</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.managerid %></td>
        <td><%= manager.name %></td>
        <td><%= manager.gender %></td>
        <td><%= manager.phone %></td>
        <td><%= manager.email %></td>
        <% if user_signed_in? %>
          <% if current_user.superadmin? %>
        <td><%= link_to '编辑信息', edit_manager_path(manager),class: "btn btn-warning" ,style: "font-size:10px;font-weight:bold"%></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<% if current_user.superadmin? %>
<%= link_to '新增管理员', new_manager_path ,class: "btn btn-primary",style: "color:white"%>
<% end %>
<% end %>