<% if current_user.admin? || current_user.superadmin?%>
<h1>学生信息</h1>

<table class="table">
  <thead>
    <tr>
      <th>学号</th>
      <th>姓名</th>
      <th>性别</th>
      <th>系号</th>
      <th>注册日期</th>
      <th>有效期</th>
      <th>信用分</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.name %></td>
        <td><%= student.gender %></td>
        <td><%= student.department %></td>
        <td><%= student.registration %></td>
        <td><%= student.validity %></td>
        <td><%= student.credit %></td>
        <td><%= link_to '详细信息', student ,class: "btn btn-success",style: "color: white;font-size:10px;font-weight:bold"%></td>
        <td><%= link_to '编辑信息', edit_student_path(student),class: "btn btn-warning" ,style: "font-size:10px;font-weight:bold"%></td>
      </tr>
    <% end %>

</tbody>
</table>
<% end %>
  <% if current_user.student? %>
  <h1>个人信息</h1>

  <div class="card" style="width: 18rem;background: cornflowerblue">
    <div class="card-header">
      详细信息
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <strong>学号:</strong>
        <%= @my_information.id %>
      </li>
      <li class="list-group-item">
        <strong>姓名:</strong>
        <%= @my_information.name %>
      </li>
      <li class="list-group-item">
        <strong>性别:</strong>
        <%= @my_information.gender %>
      </li>
      <li class="list-group-item">
        <strong>系号:</strong>
        <%= @my_information.department %>
      </li>
      <li class="list-group-item">
        <strong>注册日期:</strong>
        <%= @my_information.registration %>
      </li>
      <li class="list-group-item">
        <strong>有效期:</strong>
        <%=@my_information.validity %>
      </li>
      <li class="list-group-item">
        <strong>信用分:</strong>
        <%= @my_information.credit %>
      </li>
    </ul>
  </div>
<% end %>
<br>
<% if current_user.admin? || current_user.superadmin?%>
<%= link_to '新增学生', new_student_path,class: "btn btn-primary",style: "color:white" %>
<% end %>