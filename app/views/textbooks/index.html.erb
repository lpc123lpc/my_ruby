<h1>教材清单</h1>

<%= form_with(url: '/textbooks', method: 'get', local: true) do %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("搜索",class:"btn btn-primary",style: "font-size:10px;font-weight:100px")%>
<% end %>
<%= link_to "高级检索", new_textbooksearch_path %>
<table class="table">
  <thead>
    <tr>
      <th>系号</th>
      <th>学期</th>
      <th>教材名称</th>
      <th>作者</th>
      <th>出版社</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @textbooks.each do |textbook| %>
      <tr>
        <td><%= textbook.department %></td>
        <td><%= textbook.term %></td>
        <td><%= textbook.bookname %></td>
        <td><%= textbook.author %></td>
        <td><%= textbook.press %></td>
        <% if current_user.admin? %>
          <td><%= link_to '编辑信息', edit_textbook_path(textbook),class: "btn btn-warning" ,style: "font-size:10px;font-weight:bold" %></td>
          <td><%= link_to '删除', textbook, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" ,style: "color:black;font-size:10px;font-weight:bold" %></td>
        <% end %>
      </tr>
    <%end %>

  </tbody>
</table>

<br>
<% if user_signed_in? %>
<% if current_user.admin? %>
<%= link_to '新增教材', new_textbook_path,class: "btn btn-primary" ,style: "color:white"%>
<% end %>
<% end %>