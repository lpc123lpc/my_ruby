<p id="notice"><%= notice %></p>

<h1>教材清单</h1>

<table>
  <thead>
    <tr>
      <th>系号</th>
      <th>学期</th>
      <th>教材名称</th>
      <th>作者</th>
      <th>出版社</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @textbooks.each do |textbook| %>
      <tr>
        <td><%= textbook.department %></td>
        <td><%= textbook.term %></td>
        <td><%= textbook.bookname %></td>
        <td><%= textbook.author %></td>
        <td><%= textbook.press %></td>
        <% if current_user.admin? %>
          <td><%= link_to '编辑信息', edit_textbook_path(textbook) %></td>
          <td><%= link_to '删除教材', textbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<% if current_user.admin? %>
<%= link_to '新增教材', new_textbook_path %>
<% end %>
<% end %>