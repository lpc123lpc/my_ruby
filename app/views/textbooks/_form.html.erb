<%= form_with(model: textbook, local: true) do |form| %>
  <% if textbook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(textbook.errors.count, "error") %> prohibited this textbook from being saved:</h2>

      <ul>
        <% textbook.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :department %>
    <%= form.collection_select :department,Textbook.departments.map { |a|
      [a.first,a.first]}, :first, :second %>
  </div>

  <div class="field">
    <%= form.label :term %>
    <%= form.collection_select :term,Textbook.terms.map { |a|
      [a.first,a.first]}, :first, :second %>
  </div>

  <div class="field">
    <%= form.label :bookname %>
    <%= form.text_field :bookname %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :press %>
    <%= form.text_field :press %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
