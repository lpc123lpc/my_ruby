<p></p >
<div class="container">

  <div class="row justify-content-center align-items-center" style="margin-top: 100px">
    <h2>登录</h2>
  </div>
  <div class="row align-items-center justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="container p-3 my-3">
        <div class="form-group">
          <%= f.label :用户名 %><br />
          <%= f.text_field :userid, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :密码 %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions" style="margin-left: 65px">
          <%= f.submit "登录",class:"btn btn-primary" %>
        </div>
        <p style="margin-left: 30px">
          <strong>忘记密码请联系管理员</strong>
        </p >
      </div>

    <% end %>
  </div>
</div>